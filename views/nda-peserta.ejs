<!-- views/ndaPeserta.ejs -->
<% layout('layoutsidebar') %>

<div class="bg-white p-6 rounded-lg shadow-lg border border-gray-100 max-w-5xl mx-auto">
  <!-- Page Title -->
  <div class="mb-8 border-b pb-4">
    <h2 class="text-2xl font-bold text-gray-800">Non-Disclosure Agreement</h2>
    <p class="text-gray-600 mt-1">Upload your signed NDA document</p>
  </div>

  <!-- Template Download Section -->
  <div class="mb-8 bg-blue-50 p-5 rounded-lg border border-blue-100 flex items-center justify-between">
    <div>
      <h3 class="font-medium text-blue-800 mb-1">Need the NDA template?</h3>
      <p class="text-sm text-gray-600">Download the template, sign it, and upload below</p>
    </div>
    <a href="/nda/template" style="background-color: #3A5985;" class="inline-flex items-center px-4 py-2 text-white rounded-md hover:opacity-90 transition-colors shadow-sm">
        <img src="/images/icon_save.png" alt="Download" class="mr-3 w-5 h-5" />
        <path fill-rule="evenodd" d="M3 17a1 1 0 001 1h12a1 1 0 001-1V7a1 1 0 00-.293-.707l-4-4A1 1 0 0012 2H4a1 1 0 00-1 1v14zm10-6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L13 14.586V11z" clip-rule="evenodd" />
      </svg>
      Unduh Template
    </a>
  </div>

  <!-- Upload Form Section -->
  <form action="/nda/upload" method="POST" enctype="multipart/form-data" class="mb-8">
    <input type="hidden" name="id_user" value="<%= id_user %>" />
    <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
      <label class="block mb-3 font-medium text-gray-700">Pilih File Non-Disclosure Agreement Bertandatangan:</label>
      
      <div class="flex items-center justify-center w-full">
        <label for="file-upload" class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-white hover:bg-gray-50 transition-colors">
          <div class="flex flex-col items-center justify-center pt-5 pb-6">
            <svg class="w-10 h-10 mb-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Klik untuk upload</span> atau seret file ke sini</p>
            <p class="text-xs text-gray-500">PDF (Max: 10MB)</p>
          </div>
          <input id="file-upload" name="file" type="file" accept="application/pdf" required class="hidden" />
        </label>
      </div>
      
      <div id="file-name" class="mt-3 text-sm text-gray-500">No file chosen</div>
      
      <div class="mt-4 flex justify-end">
        <button type="submit" style="background-color: #3A5985;" class="px-5 py-2 text-white rounded-md hover:opacity-90 transition-colors flex items-center shadow-sm">
            <img src="/images/icon_submit.png" alt="Download" class="mr-3 w-5 h-5" />
            <path fill-rule="evenodd" d="M3 17a1 1 0 001 1h12a1 1 0 001-1V9a1 1 0 00-.293-.707l-2-2A1 1 0 0014 6h-1v5a1 1 0 01-1 1H8a1 1 0 01-1-1V6H5a1 1 0 00-.707.293l-2 2A1 1 0 002 9v8a1 1 0 001 1h12a1 1 0 001-1V9a1 1 0 00-.293-.707l-2-2A1 1 0 0012 6V3a1 1 0 00-1-1H5a1 1 0 00-1 1v3a1 1 0 001 1h6a1 1 0 001-1V6" clip-rule="evenodd" />
          </svg>
          Submit
        </button>
      </div>
    </div>
  </form>

<!-- Status Section -->
<div>
  <div class="flex items-center mb-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600 mr-2" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1v-3a1 1 0 00-1-1z" clip-rule="evenodd" />
    </svg>
    <h3 class="text-lg font-semibold text-gray-800">Status Dokumen</h3>
  </div>

  <!-- Update: Tambahkan max-w-md supaya tabel tidak terlalu lebar + mepet kiri -->
  <div class="bg-gray-50 rounded-lg border border-gray-200 overflow-hidden w-full max-w-3xl">
    <div class="bg-gray-100 px-6 py-3 flex justify-between items-center border-b border-gray-200">
      <span class="font-medium text-gray-700">STATUS</span>
      <span class="font-medium text-gray-700">AKSI</span>
    </div>
    
    <div class="p-6">
      <% if (nda_status === 'Dikirim') { %>
        <div class="flex justify-between items-center">
          <div class="flex items-center">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Terkirim
            </span>
            <span class="ml-3 text-sm text-gray-500">Dokumen berhasil diunggah</span>
          </div>

          <div class="flex space-x-3">
            <a href="/nda/download/<%= id_user %>" style="background-color: #3A5985;" class="p-2 text-white rounded-md hover:opacity-90 transition-colors flex items-center shadow-sm">
              <img src="/images/icon_unduh.png" alt="Download" class="w-5 h-5" />
            </a>

            <form action="/nda/delete/<%= id_user %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus file NDA?')">
              <button type="submit" style="background-color: #F40808;" class="p-2 text-white rounded-md hover:opacity-90 transition-colors flex items-center shadow-sm">
                <img src="/images/icon_delete.png" alt="Delete" class="w-5 h-5" />
              </button>
            </form>
          </div>
        </div>
      <% } else { %>
        <div class="flex items-center justify-center h-24 text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <span>Belum ada file yang diunggah.</span>
        </div>
      <% } %>
    </div>
  </div>
</div>


<script>
  // Display file name when selected
  document.getElementById('file-upload').addEventListener('change', function(e) {
    const fileName = e.target.files[0] ? e.target.files[0].name : 'No file chosen';
    document.getElementById('file-name').textContent = fileName;
  });
</script>