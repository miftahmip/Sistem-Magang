<% layout('layout-admin') %>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-blue-500">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-blue-100 mr-4">
        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
      <div>
        <p class="text-sm text-gray-500">Total Peserta</p>
        <p class="text-xl font-bold"><%= akunList.length %></p>
      </div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-green-500">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-green-100 mr-4">
        <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <p class="text-sm text-gray-500">NDA Tersubmit</p>
        <p class="text-xl font-bold"><%= akunList.filter(akun => akun.nda_status === 'Dikirim').length %></p>
      </div>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-red-500">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-red-100 mr-4">
        <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
      </div>
      <div>
        <p class="text-sm text-gray-500">NDA Pending</p>
        <p class="text-xl font-bold"><%= akunList.filter(akun => akun.nda_status !== 'Dikirim').length %></p>
      </div>
    </div>
  </div>
</div>

<!-- Data Table Header & Button -->
<div class="flex justify-between items-center mb-4">
  <h2 class="text-xl font-bold">Data Peserta Magang</h2>
  <button id="openFormBtn" class="bg-[#3A5985] text-white px-4 py-2 rounded flex items-center">
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
    </svg>
    Tambah Peserta
  </button>
</div>

<!-- Data Table -->
<div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
  <div class="overflow-x-auto">
    <table class="w-full table-auto">
      <thead>
        <tr class="bg-[#3A5985] text-white">
          <th class="px-4 py-3 text-left">Nama Lengkap</th>
          <th class="px-4 py-3 text-left">Email</th>
          <th class="px-4 py-3 text-left">Instansi</th>
          <th class="px-4 py-3 text-left">Jurusan</th>
          <th class="px-4 py-3 text-left">No HP</th>
          <th class="px-4 py-3 text-left">Alamat</th>
          <th class="px-4 py-3 text-left">Periode</th>
          <th class="px-4 py-3 text-left">Pembimbing</th>
          <th class="px-4 py-3 text-left">Status NDA</th>
          <th class="px-4 py-3 text-center">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% akunList.forEach((akun) => { %>
          <tr class="border-t hover:bg-gray-50 transition duration-150">
            <td class="px-4 py-3"><%= akun.nama %></td>
            <td class="px-4 py-3"><%= akun.user.email %></td>
            <td class="px-4 py-3"><%= akun.instansi %></td>
            <td class="px-4 py-3"><%= akun.jurusan %></td>
            <td class="px-4 py-3"><%= akun.no_hp %></td>
            <td class="px-4 py-3"><%= akun.alamat %></td>
            <td class="px-4 py-3"><%= akun.tanggal_mulai %> s.d <%= akun.tanggal_selesai %></td>
            <td class="px-4 py-3"><%= akun.pembimbing %></td>
            <td class="px-4 py-3">
              <% if (akun.nda_status === 'Dikirim') { %>
                <span class="text-green-800">Dikirim</span>
              <% } else { %>
                <span class="text-red-800">Belum Dikirim</span>
              <% } %>
            </td>
            <td class="px-4 py-3">
              <div class="flex flex-col space-y-1">
                <div class="flex space-x-2 justify-center">
                  <button 
                    onclick="editPeserta('<%= akun.id_user %>', '<%= akun.nama %>', '<%= akun.user.email %>', '<%= akun.instansi %>', '<%= akun.jurusan %>', '<%= akun.no_hp %>', '<%= akun.alamat %>', '<%= akun.tanggal_mulai %>', '<%= akun.tanggal_selesai %>', '<%= akun.pembimbing %>')" 
                    class="bg-[#22904A] text-white w-8 h-8 flex items-center justify-center rounded transition duration-150 hover:bg-[#1b7a3d]"
                  >
                    <img src="/images/icon_edit.png" alt="Edit" class="w-5 h-5">
                  </button>
                  <form id="deleteForm-<%= akun.id_user %>" action="/admin/akun/delete/<%= akun.id_user %>" method="POST">
                    <button type="button" onclick="showDeleteConfirmation('<%= akun.id_user %>')" class="bg-[#F40808] text-white w-8 h-8 flex items-center justify-center rounded transition duration-150 hover:bg-[#d10707]">
                      <img src="/images/icon_delete.png" alt="Hapus" class="w-5 h-5">
                    </button>
                  </form>
                </div>
              
                <% if (akun.nda_status === 'Dikirim') { %>
                  <form action="/admin/akun/nda/download/<%= akun.id_user %>" method="GET">
                    <button type="submit" class="bg-[#3A5985] text-white flex items-center justify-center gap-1 px-3 py-1 rounded w-full transition duration-150 hover:bg-[#2d4568]">
                      <img src="/images/icon_unduh.png" alt="Download" class="w-4 h-4" />
                      <span class="text-xs">NDA</span>
                    </button>
                  </form>
                <% } %>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>    
    </table>
  </div>
</div>

<!-- Modal Form Popup -->
<div id="formModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
  <div class="bg-white rounded-lg shadow-xl w-full max-w-4xl max-h-screen overflow-y-auto">
    <div class="flex justify-between items-center border-b p-4">
      <h3 class="text-xl font-bold text-[#3A5985]" id="modalTitle">Form Data Peserta Magang</h3>
      <button id="closeFormBtn" class="text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <form id="pesertaForm" action="/admin/akun" method="POST" class="p-6 space-y-4">
      <input type="hidden" id="userId" name="userId" />
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="namaLengkap" class="block text-sm font-medium text-gray-700 mb-1">Nama Lengkap</label>
          <input
            type="text"
            id="namaLengkap"
            name="namaLengkap"
            placeholder="Nama Lengkap"
            class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
            required
          />
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
            required
          />
        </div>
        
        <div>
          <label for="instansi" class="block text-sm font-medium text-gray-700 mb-1">Instansi Asal</label>
          <input
            type="text"
            id="instansi"
            name="instansi"
            placeholder="Instansi Asal"
            class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
            required
          />
        </div>
        
        <div>
          <label for="jurusan" class="block text-sm font-medium text-gray-700 mb-1">Jurusan</label>
          <input
            type="text"
            id="jurusan"
            name="jurusan"
            placeholder="Jurusan"
            class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
            required
          />
        </div>
        
        <div>
          <label for="no_hp" class="block text-sm font-medium text-gray-700 mb-1">No HP</label>
          <input
            type="text"
            id="no_hp"
            name="no_hp"
            placeholder="No HP"
            class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
            required
          />
        </div>
        
        <div>
          <label for="pembimbing" class="block text-sm font-medium text-gray-700 mb-1">Pembimbing</label>
          <input
            type="text"
            id="pembimbing"
            name="pembimbing"
            placeholder="Pembimbing"
            class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
            required
          />
        </div>
      </div>
      
      <div>
        <label for="alamat" class="block text-sm font-medium text-gray-700 mb-1">Alamat</label>
        <input
          type="text"
          id="alamat"
          name="alamat"
          placeholder="Alamat"
          class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
          required
        />
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="periodeMulai" class="block text-sm font-medium text-gray-700 mb-1">Tanggal Mulai</label>
          <input
            type="date"
            id="periodeMulai"
            name="periodeMulai"
            class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
            required
          />
        </div>
        
        <div>
          <label for="periodeSelesai" class="block text-sm font-medium text-gray-700 mb-1">Tanggal Selesai</label>
          <input
            type="date"
            id="periodeSelesai"
            name="periodeSelesai"
            class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
            required
          />
        </div>
      </div>
      
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1" id="passwordLabel">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          class="w-full p-2 border rounded focus:ring-[#3A5985] focus:border-[#3A5985]"
        />
        <p id="passwordHint" class="text-sm text-gray-500 mt-1 hidden">Biarkan kosong jika tidak ingin mengubah password</p>
      </div>

      <div class="flex justify-end space-x-2 pt-4 border-t">
        <button type="button" id="resetBtn" class="bg-gray-200 hover:bg-gray-300 px-4 py-2 rounded transition duration-150">Reset</button>
        <button type="submit" class="bg-[#3A5985] hover:bg-[#2d4568] text-white px-4 py-2 rounded transition duration-150">
          <span id="submitBtnText">Simpan</span>
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteConfirmModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
  <div class="bg-white rounded-lg shadow-xl w-full max-w-md p-6">
    <div class="text-center mb-4">
      <svg class="w-16 h-16 text-red-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
      </svg>
      <h3 class="text-xl font-bold text-gray-900 mt-2">Konfirmasi Hapus</h3>
      <p class="text-gray-600 mt-1">Apakah Anda yakin ingin menghapus data ini?</p>
    </div>
    
    <div class="flex justify-center space-x-4">
      <button id="cancelDeleteBtn" class="bg-gray-200 hover:bg-gray-300 px-4 py-2 rounded transition duration-150">
        Batal
      </button>
      <button id="confirmDeleteBtn" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded transition duration-150">
        Ya, Hapus
      </button>
    </div>
  </div>
</div>

<!-- Success Modal -->
<div id="successModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
  <div class="bg-white rounded-lg shadow-xl w-full max-w-md p-6">
    <div class="text-center mb-4">
      <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto">
        <svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mt-2">Berhasil Dihapus</h3>
      <p class="text-gray-600 mt-1">Data telah berhasil dihapus dari sistem.</p>
    </div>
    
    <div class="flex justify-center">
      <button id="closeSuccessBtn" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded transition duration-150">
        Tutup
      </button>
    </div>
  </div>
</div>

<script>
  // Modal Form Functionality
  const formModal = document.getElementById('formModal');
  const deleteConfirmModal = document.getElementById('deleteConfirmModal');
  const successModal = document.getElementById('successModal');
  const openFormBtn = document.getElementById('openFormBtn');
  const closeFormBtn = document.getElementById('closeFormBtn');
  const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');
  const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
  const closeSuccessBtn = document.getElementById('closeSuccessBtn');
  const pesertaForm = document.getElementById('pesertaForm');
  const resetBtn = document.getElementById('resetBtn');
  const modalTitle = document.getElementById('modalTitle');
  const submitBtnText = document.getElementById('submitBtnText');
  const passwordField = document.getElementById('password');
  const passwordLabel = document.getElementById('passwordLabel');
  const passwordHint = document.getElementById('passwordHint');
  
  let currentDeleteId = null;
  
  // Open modal for new data
  openFormBtn.addEventListener('click', () => {
    resetForm();
    modalTitle.textContent = 'Form Data Peserta Magang';
    submitBtnText.textContent = 'Simpan';
    pesertaForm.action = '/admin/akun';
    passwordField.required = true;
    passwordHint.classList.add('hidden');
    formModal.classList.remove('hidden');
  });
  
  // Close modal
  closeFormBtn.addEventListener('click', () => {
    formModal.classList.add('hidden');
  });
  
  // Close modal if clicked outside
  window.addEventListener('click', (e) => {
    if (e.target === formModal) {
      formModal.classList.add('hidden');
    }
    if (e.target === deleteConfirmModal) {
      deleteConfirmModal.classList.add('hidden');
    }
    if (e.target === successModal) {
      successModal.classList.add('hidden');
    }
  });
  
  // Delete confirmation functionality
  function showDeleteConfirmation(userId) {
    currentDeleteId = userId;
    deleteConfirmModal.classList.remove('hidden');
  }
  
  cancelDeleteBtn.addEventListener('click', () => {
    deleteConfirmModal.classList.add('hidden');
    currentDeleteId = null;
  });
  
  confirmDeleteBtn.addEventListener('click', () => {
    if (currentDeleteId) {
      const form = document.getElementById('deleteForm-' + currentDeleteId);
      form.submit();
      
      // For demo purposes, we'll just show the success modal immediately
      // In production, this would typically happen after the server confirms deletion
      deleteConfirmModal.classList.add('hidden');
      successModal.classList.remove('hidden');
      
      // Automatically close success modal after 2 seconds
      setTimeout(() => {
        successModal.classList.add('hidden');
      }, 10000);
    }
  });
  
  closeSuccessBtn.addEventListener('click', () => {
    successModal.classList.add('hidden');
  });
  
  // Reset form
  resetBtn.addEventListener('click', () => {
    resetForm();
  });
  
  function resetForm() {
    pesertaForm.reset();
    document.getElementById('userId').value = '';
  }
  
  // Edit peserta function
  function editPeserta(id, nama, email, instansi, jurusan, no_hp, alamat, tanggal_mulai, tanggal_selesai, pembimbing) {
    document.getElementById('userId').value = id;
    document.getElementById('namaLengkap').value = nama;
    document.getElementById('email').value = email;
    document.getElementById('instansi').value = instansi;
    document.getElementById('jurusan').value = jurusan;
    document.getElementById('no_hp').value = no_hp;
    document.getElementById('alamat').value = alamat;
    document.getElementById('periodeMulai').value = tanggal_mulai;
    document.getElementById('periodeSelesai').value = tanggal_selesai;
    document.getElementById('pembimbing').value = pembimbing;
    
    modalTitle.textContent = 'Edit Data Peserta Magang';
    submitBtnText.textContent = 'Update';
    pesertaForm.action = '/admin/akun/edit/' + id;
    passwordField.required = false;
    passwordHint.classList.remove('hidden');
    
    formModal.classList.remove('hidden');
  }
</script>