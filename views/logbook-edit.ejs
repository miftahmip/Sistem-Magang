<%- include('layout/sidebar') %>
<div class="ml-64 p-8">
  <h1 class="text-xl font-bold mb-4">Edit Kegiatan</h1>
  <form action="/edit-kegiatan" method="post" class="bg-white rounded-xl shadow-md p-6 space-y-4 w-full max-w-md">
    <input type="date" name="tanggal_kegiatan" value="2025-03-02" class="w-full input input-bordered" required>
    <textarea name="deskripsi_kegiatan" class="w-full textarea textarea-bordered h-24" required>Pembuatan Activity diagram e-SKA\nPembuatan Sequence Diagram e-SKA\nPembuatan ERD e-SKA</textarea>
    <select name="status_kegiatan" class="w-full input input-bordered" required>
      <option value="dalam_proses">Dalam Proses</option>
      <option value="selesai">Selesai</option>
    </select>
    <button type="submit" class="btn btn-primary w-full">Update</button>
  </form>
</div>
